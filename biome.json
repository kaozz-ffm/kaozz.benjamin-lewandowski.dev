{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*.js",
      "**/*.ts",
      "**/*.vue",
      "**/*.json",
      "!**/dist",
      "!**/node_modules",
      "!**/coverage",
      "!**/.turbo",
      "!**/.output",
      "!**/temp",
      "!**/.nuxt",
      "!**/.vercel"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 120,
    "attributePosition": "multiline",
    "bracketSpacing": true,
    "useEditorconfig": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "useSortedProperties": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "attributePosition": "multiline"
    },
    "globals": ["$", "_"]
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "double"
    }
  }
}
